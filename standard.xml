<?xml version="1.0" encoding="UTF-8"?>
<presentation title="Presentation title">
    <info>
        <author>The author</author>
        <date>08/11/2022</date> <!-- Date of creation -->
        <numSlides></numSlides>
    </info>
    <slide id="1" orientation="landscape|portrait" width="1920" height="1080">
        <!-- width and height can be any integer value-->
        <text font="fontName" fontSize="22pt" fontColour="#F0F0F0BB">
            <!-- 
                * font must be font name. Font name is then mapped by application via locally provided resource 
                * fontSize must be in points (pt)
                * fontColour must be in #RGBA format, two hex chars per channel
            -->
            Some
            <b>text</b>
            <i>data</i>
        </text>
        <!-- 
            * url must link to audio source file
            * startTime is the timestamp to use as starting point when playing the file. Must be hh:mm:ss
            * stopTime is the timestamp to use as end point when playing the file. Must be hh:mm:ss
            * loop must be boolean. Whether to play the file in a loop. startTime and stopTime apply
            * icon must be either default or arbitrary string. When default, the default icon will be displayed. When arbitrary string the
              application will load the icon associated with said string. If the icon is not found the application defaults to default icon.
         -->
        <audio url="https://example.com/audio.mp3" startTime="00:00:00" stopTime="00:05:00" loop="true|false" icon="icon_name|default" />
        <!-- 
            All properties as above.
            * volume must be an integer number between 0 and 100
         -->
        <video url="https://example.com/video.mp4" startTime="00:00:00" stopTime="00:05:00" loop="true|false" volume="50" />
        <!-- 
            Url as above.
            * rotation must be an integer number between 0 and 360. Represents degrees.
         -->
        <image url="https://example.com/image.webp" rotation="180" />
    </slide>
</presentation>